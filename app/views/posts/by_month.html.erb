<% @post_months.sort.each do |month, posts| %>
	<h2><%= month.strftime('%B %Y') %></h2>
	<table class="table table-condensed">
		<thead>
			<tr>
				<th>Title</th>
				<th>Tags</th>
			</tr>
		</thead>
		<tbody>
			<% posts.each do |post| %>
				<tr>
					<td><%= link_to post.title, post %></td>
					<td><%= raw post.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>