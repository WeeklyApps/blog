<div id="comments">
  <% @comments.each do |comment| %>
    <div class="panel panel-default">
			<div class="panel-body">
      	<%= markdown comment.content %>
    	</div>
			<div class="panel-footer">
				by: <%= comment.user_id? ? link_to("Registered User: #{comment.user.display_name}", comment.user) : (comment.commenter? ? comment.commenter : "Anonymous") %>
			</div>
		</div>
  <% end %>
</div>