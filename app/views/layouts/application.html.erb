<!DOCTYPE html>
<html>
	<head>
	  <title>Blog</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div id="header-wrap">
		  <div id="header">
		    <h1>WeeklyApps Blog</h1>
		  </div>
		</div>
		<div class="row">
		  <div class="col-md-2"></div>
		  <div class="col-md-8">
				<% if notice %>
					<div class="alert alert-success"><%= notice %></div>
				<% end %>
				<% if alert %>
				<div class="alert alert-danger"><%= alert %></div>
				<% end %>
				<%= yield %>
			</div>
			<div class="col-md-1">
				<%= render 'layouts/devise_links' %>
				<div id="navgroup">
					<%= link_to('Blog Posts', posts_path, :class => "btn btn-default") %>
					<%= link_to('Announcements', announcements_path, :class => "btn btn-default") %>
					<%= link_to('Projects', projects_path, :class => "btn btn-default") %>
				</div>
			</div>
			<div class="col-md-1">
			</div>
		</div>
	</body>
</html>
